{
  "name": "secure-dev-sandbox",
  "build": {
    "dockerfile": "Dockerfile"
  },

  // Security: non-root user
  "remoteUser": "developer",
  "containerUser": "developer",

  // Security: minimal privileges, resource limits
  "runArgs": [
    "--cap-drop=ALL",
    "--security-opt=no-new-privileges:true",
    "--memory=2g",
    "--cpus=2"
  ],

  // Only mount workspace - nothing else writable on host
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "workspaceFolder": "/workspace",

  // Required tools (pin versions for reproducibility)
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  // Secrets via runtime injection (never bake into image)
  "containerEnv": {
    "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}"
  },

  // Post-create setup
  "postCreateCommand": "npm install && npm run build",

  // VS Code extensions (optional)
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
