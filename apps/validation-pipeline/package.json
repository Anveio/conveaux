{
  "name": "@conveaux/validation-pipeline",
  "version": "0.1.0",
  "private": true,
  "description": "Validation pipeline for linting, typechecking, and prerequisite validation",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "bin": {
    "validation-pipeline": "./src/cli.ts"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "start": "tsx src/cli.ts",
    "typecheck": "tsc --noEmit"
  },
  "files": ["src"],
  "dependencies": {
    "@conveaux/contract-wall-clock": "*",
    "@conveaux/port-dag": "*",
    "@conveaux/port-wall-clock": "*",
    "chalk": "^5.3.0",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@conveaux/tsconfig": "*",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
